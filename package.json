{
  "name": "qa-challenge-accenture",
  "version": "1.0.0",
  "type": "module",
  "description": "QA Challenge Accenture - Automação de Testes API e Frontend",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:api": "cypress run --config-file cypress.config.js --spec 'api/tests/**/*.feature'",
    "test:frontend": "cypress run --config-file cypress.config.js --spec 'frontend/tests/**/*.feature'",
    "open": "cypress open",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "cypress",
    "cucumber",
    "bdd",
    "api-testing",
    "e2e-testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@faker-js/faker": "^10.1.0",
    "cypress": "^13.6.0",
    "esbuild": "^0.19.0",
    "eslint": "^9.39.1",
    "eslint-plugin-cypress": "^5.2.0",
    "globals": "^16.5.0"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": [
      "api/tests/**/step-definitions/**/*.js",
      "frontend/tests/**/step-definitions/**/*.js"
    ],
    "messages": {
      "enabled": true,
      "output": "api/reports/cucumber-messages.ndjson"
    },
    "json": {
      "enabled": true,
      "output": "api/reports/cucumber-report.json"
    }
  }
}
